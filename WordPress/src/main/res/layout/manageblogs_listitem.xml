<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        <TextView
            android:id="@+id/blog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/settings_list_item_padding"
            android:paddingTop="@dimen/settings_list_item_padding"
            android:text="@string/title"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:layout_toLeftOf="@+id/checkbox"
            android:layout_toStartOf="@+id/checkbox"
            tools:text="Blog Name"/>

        <TextView
            android:id="@+id/blog_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/blog_name"
            android:ellipsize="end"
            android:paddingLeft="@dimen/settings_list_item_padding"
            android:paddingBottom="@dimen/settings_list_item_padding"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:textColor="@android:color/tertiary_text_dark"
            android:singleLine="true"
            tools:text="verylonglonglonglonglonglonglonglonglonglonglongblogurl.wordpress.com"
            android:layout_toLeftOf="@+id/checkbox"
            android:layout_toStartOf="@+id/checkbox"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/settings_list_item_padding"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>
